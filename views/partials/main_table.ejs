<div class="row">
    <div class="col-8 offset-2">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Deposit</th>
                    <th>Credit card</th>
                    <th>Profile</th>
                </tr>
            </thead>
            <tbody>
                <% for( let i = 0; i < accounts.length; i++ ) { %>
                    <tr>
                        <td><%= accounts[i].firstName %></td>
                        <td><%= accounts[i].lastName %></td>
                        <td><%= accounts[i].deposit %></td>
                        <td><%= accounts[i].creditCard %></td>
                        <td><a href="/profile/<%= accounts[i].id %>" class="btn btn-success">Profile</a></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>